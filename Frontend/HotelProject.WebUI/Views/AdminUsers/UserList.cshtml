@model List<ResultAppUserListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int counter = 0;
}


<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Çalıştığı Lokasyon</th>
            <th>Departman</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            ++counter;
            <tr>
                <td>@counter</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.City</td>
                <td>@item.WorkDepartment</td>
                <td><i class="fa fa-circle-o text-success  mr-2"></i> Aktif</td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydı</a>